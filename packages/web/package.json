{
  "name": "@minesweeper/web",
  "version": "0.2.0",
  "description": "Minesweeper HTML canvas interface.",
  "main": "./dist/index.cjs.js",
  "repository": "https://github.com/b-goodman/Minesweeper",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "tsc": "tsc && yarn build:docs && ./node_modules/.bin/webpack ",
    "build:docs": "npx typedoc ./src",
    "build:lib": "tsc && ./node_modules/.bin/webpack",
    "start": "./node_modules/.bin/webpack-dev-server "
  },
  "files": [
    "lib"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.4",
    "@types/jest": "^24.0.14",
    "@types/node": "^12.0.8",
    "babel-loader": "^8.0.6",
    "babel-minify-webpack-plugin": "^0.3.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2",
    "uglify-js": "github:mishoo/UglifyJS2#harmony",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.1"
  },
  "dependencies": {
    "@minesweeper/core": "file:../core",
    "phaser": "3.17.0"
  }
}
