{
  "name": "@minesweeper/core",
  "version": "0.2.0",
  "description": "Library for popular game 'Minesweeper'",
  "main": "./dist/index.cjs.js",
  "repository": "https://github.com/b-goodman/Minesweeper",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "tsc": "tsc && yarn build:docs && ./node_modules/.bin/webpack ",
    "build:docs": "npx typedoc ./src",
    "build:lib": "tsc && yarn build_docs"
  },
  "files": [
    "lib"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/src/.*\\.spec\\.ts$"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.4",
    "@types/jest": "^21.1.5",
    "@types/node": "^12.0.0",
    "babel-loader": "^8.0.5",
    "jest": "^21.2.1",
    "ts-jest": "^21.1.4",
    "tslint": "^5.16.0",
    "typedoc": "^0.14.2",
    "typescript": "^2.6.1",
    "webpack": "^4.30.0"
  },
  "dependencies": {}
}
